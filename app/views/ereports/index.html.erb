
<div class="col-sm-10">
<% @patients.each do |patient| %>
<h2>
<ruby><rb><%= patient.p_name %><rt><%= patient.p_kana %></ruby>
<a href="../ereports/<%= patient.id %>">他職種記録</a>
</h2>

   
<table class="table table-striped table-bordered table-condensed table-hover" style="table-layout:fixed;width:100%;">
  <tr>
   <th class="text-center">患者</th>
   <th class="text-center">id</th>
   <th class="text-center">記録種類</th>
   <th sclass="text-center">記録時間</th>
  </tr>
<% patient.ereports.each do |ereport| %>
  <tr>
   <th style="width:5%" class="text-center"><%= ereport.patient_id %></th>
   <td style="width:5%" class="text-center"><%= link_to ereport.id, edit_ereport_path(ereport) %></td>
   <td style="word-wrap:break-word;" class="text-left"><%= ereport.erm %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= ereport.ert %></td> 
  </tr>

  <% end %>
</table>

<% end %>
<%= link_to '新規投稿', new_ereport_path %>
</div>



