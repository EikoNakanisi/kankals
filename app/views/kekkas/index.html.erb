<div class="col-sm-12">
<div class="bs-docs-header" id="content">
</div>
</div>
<div class="col-sm-10">
<% @patients.each do |patient| %>
<h2 id="<%= patient.id %>">
<ruby><rb><%= patient.p_name %><rt><%= patient.p_kana %></ruby>
採血採取日時:2018年5月10日
</h2>

   
<table class="table table-striped table-bordered table-condensed table-hover" style="table-layout:fixed;width:100%;">
  <tr>
   <th style="width:5%" class="text-center"><font size="+1">id</font></th>
   <th style="width:20%" class="text-center"><font size="+1">検査項目</font></th>
   <th style="width:10%" class="text-center"><font size="+1">結果</font></th> 
   <th style="width:5%" class="text-center"><font size="+1">H/L</font></th> 
   <th style="width:10%" class="text-center"><font size="+1">下限値</font></th>
   <th style="width:10%" class="text-center"><font size="+1">上限値</font></th> 
   <th style="width:10%" class="text-center"><font size="+1">単位</font></th> 
  </tr>
<% patient.saiketus.each do |saiketu| %>
  <tr>
   <td class="text-center"><%= saiketu.id %></td>
   <td style="word-wrap:break-word;" class="text-left"><font size="+1"><%= saiketu.koumoku %></font></td> 
<% if saiketu.kekka_m == 'H' %>
   <td class="text-right"><font size="+1"color="#EE0000"><%= saiketu.kekka %></font></td> 
   <td class="text-center"><font size="+1"color="#EE0000"><%= saiketu.kekka_m %></font></td>
<% elsif saiketu.kekka_m == 'L' %>
   <td class="text-right"><font size="+1"color="#0000FF"><%= saiketu.kekka %></font></td> 
   <td class="text-center"><font size="+1"color="#0000FF"><%= saiketu.kekka_m %></font></td>
<% else %>
   <td style="word-wrap:break-word;" class="text-right"><font size="+1"><%= saiketu.kekka %></font></td> 
   <td style="word-wrap:break-word;" class="text-center"><font size="+1"><%= saiketu.kekka_m %></font></td>
<% end %>
   <td style="word-wrap:break-word;" class="text-right"><font size="+1"><%= saiketu.sita %></font></td> 
   <td style="word-wrap:break-word;" class="text-right"><font size="+1"><%= saiketu.ue %></font></td> 
   <td style="word-wrap:break-word;" class="text-left"><font size="+1"><%= saiketu.tani %></font></td>
  </tr>


  <% end %>
</table>

<% end %>
</div>



