<div class="honbun">

<table class="table table-striped table-bordered table-condensed table-hover" style="table-layout:fixed;width:100%;">
  <tr>
   <th style="width:6%" class="text-center">記載日</th>
   <th style="width:6%" class="text-center">年齢</th>
   <th style="width:6%" class="text-center">既住歴</th> 
   <th style="width:6%" class="text-center">活動領域</th> 
   <th style="width:6%" class="text-center">認識力</th>
   <th style="width:6%" class="text-center">排泄</th> 
   <th style="width:6%" class="text-center">麻薬</th> 
   <th style="width:6%" class="text-center">抗精神薬</th>
   <th style="width:6%" class="text-center">下剤</th> 
   <th style="width:6%" class="text-center">睡眠安定剤</th> 
   <th style="width:6%" class="text-center">降圧利尿剤</th>
   <th style="width:6%" class="text-center">環境</th>
   <th style="width:6%" class="text-center">点滴酸素</th> 
   <th style="width:6%" class="text-center">合計</th> 
   <th style="width:12%" class="text-center">予防策</th> 
   <th style="width:2%" class="text-center">id</th>
  </tr>
  <% @enshus.each do |enshu| %>
  <tr>
   <th style="width:6%" class="text-left"><%= enshu.kisaibi %></th>
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.age %></td>
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.kiou %></td>
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.katudou %></td> 
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.ninsiki %></td> 
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.haisetu %></td>
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.med1 %></td> 
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.med2 %></td> 
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.med3 %></td>
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.med4 %></td> 
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.med5 %></td> 
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.kankyo1 %></td> 
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.kankyo2 %></td>
   <td style="word-wrap:break-word;" class="text-center"><%= enshu.goukei %></td> 
   <td style="word-wrap:break-word;" class="text-left"><%= enshu.yobou %></td> 
   <td style="width:2%" class="text-center"><%= link_to enshu.id, enshu %></td>
  </tr>

  <% end %>
</table>

<br>
<div class="col-sm-12 row text-center">
<%= link_to 'CSV', enshus_path(format: "csv"), class: 'btn btn-primary btn-left', id: "Download-btn" %>
<%= link_to 'Excel', enshus_path(format: "xls"), class: 'btn btn-primary btn-left', id: "Download-btn" %>
</div>
<%= form_tag import_enshus_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "インポート" %>
<% end %>

<%= link_to '新規投稿', new_enshu_path %>

</div>